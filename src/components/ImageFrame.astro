---
import { Image } from '@astrojs/image/components';
const { src, alt } = Astro.props;
---

<div class="full-width bg-3 flex flex-col items-center mt-4">
	<div class="text-left">
		<Image src={src} alt={alt} height={400} aspectRatio="1:1" />
		<!-- <div class="text mt-8 text-4xl font-bold">Figure</div> -->
	</div>
</div>


<style lang="scss">
	.full-width{
		width:100%;
		// background-image: url('/images/abstract-halftone.svg');
		background-size: auto 100%;
		background-position: right;
		background-repeat: no-repeat;
		padding:4rem;

		img {
			width:100%;
		}
	}
	.text {
		// font-size: 3rem;
		// font-weight: 900;
		color: var(--text-color-light);
	}
</style>