---
const { title, metaDesc } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:wght@400;700&display=swap" rel="stylesheet">
		<link rel="icon" href="/favicon/favicon.png" sizes="any">
		<link rel="icon" href="/favicon/favicon.svg" type="image/svg+xml">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="theme-color" content="#ffffff">
		<meta name="description" content={metaDesc}>
		<title>{title}</title>
	</head>
	<body class="h-full">
		<slot />
	</body>
</html>
<style is:global lang="scss">
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	* {
		box-sizing: border-box;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	:root {
		--typeface-primary: 'Atkinson Hyperlegible';
	}
	body {
		font-family: var(--typeface-primary), -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif;
	}

	:root {
		

		/* Color styles */
	--new--blue: #45A6EB;
	--new--blue-2: #0065B3;
	--new--blue-3: #0D034C;

	--new--blue-2--blue-1: #F9FAFD;
	--new--blue-2--blue-2: #EAEDF7;
	--new--blue-2--blue-3: #CBD4EC;
	--new--blue-2--blue-4: #ADBCE0;
	--new--blue-2--blue-5: #8DA4D5;
	--new--blue-2--blue-6: #688CC8;
	--new--blue-2--blue-7: #3B73BB;
	--new--blue-2--blue-8-: #0768AA;
	--new--blue-2--blue-9: #164C84;
	--new--blue-2--blue-10: #193C66;

	--union--blue-1: #FAFAFC;
	--union--blue-2: #EEEDF4;
	--union--blue-3: #D5D3E3;
	--union--blue-4: #BCB9D3;
	--union--blue-5: #A4A1C3;
	--union--blue-6: #8A86B2;
	--union--blue-7: #6F6DA1;
	--union--blue-8: #5A5993;
	--union--blue-9: #424484;
	--union--blue-10: #2C3478;

	--union--red-1: #FEF8F8;
	--union--red-2: #FEE9E6;
	--union--red-3: #FBCBC3;
	--union--red-4: #F5A9A2;
	--union--red-5: #EC8882;
	--union--red-6: #E06460;
	--union--red-7: #D1363F;
	--union--red-8-: #BC132C;
	--union--red-9: #931924;
	--union--red-10: #72191E;

	--red--primary--red: #E31B23;
	--blue--primary--blue: #005288;

	--grey--black: #111111;
	--grey--grey-1: #333333;
	--grey--grey-2: #666666;
	--grey--grey-3: #999999;
	--grey--grey-4: #CCCCCC;
	--grey--white: #FFFFFF;

	--agitos--red: #E52322;
	--agitos--blue: #0075BF;
	--agitos--green: #009640;

	// Set variables
	--color-primary: var(--grey--black);
	--color-theme: var(--new--blue-3);
	--color-bg-1: var(--union--blue-8);
	--color-bg-2: var(--union--blue-4);
	--color-bg-3: var(--union--blue-2);
	--color-bg-4: var(--new--blue-3);
	--color-bg-5: var(--union--blue-1);
	--color-bg-menu: var(--union--blue-9);
	--color: var(--grey--black);
	--bg-body: var(--union--blue-1);
	--text-color: var(--grey--black);
	--hero-text-color: var(--grey--black);
	--text-color-light: var(--grey--grey-4);

	--table-border-color: var(--new--blue-2--blue-2);
	--table-header-bg-color: var(--new--blue-2--blue-2);
	--table-header-text-color: var(--new--blue-2--blue-10);
	--table-header-danger-bg-color:var(--union--red-2);
	--table-header-danger-text-color: var(--union--red-9);
	}
	html{
		background: var(--bg-body);
	}
	body{
		background: var(--bg-body);
		color: var(--text-color);
	}


	.content-width{
		margin:0 auto;
		width:100%;
		max-width: calc(100% - 48px);
		@media(min-width:420px){
			max-width: calc(100% - 96px);
		}
		@media(min-width:1400px){
			max-width: 900px;
		}
	}

	.content {
		padding-top:80px;
		padding-bottom:80px;

		@media(min-width:420px){
			padding-top:120px;
			padding-bottom:200px;
		}

		.spacer{
			height:180px
		}

		a {
			text-decoration: underline;
			word-break: break-all;
		}

		p{
			line-height: 1.68;
			max-width: 70ch;
		}
		*+p{
			margin-top:24px
		}

		p, h1, h2, h3, h4, h5, h6, ul, ol, table{
			@media(min-width:420px){
				font-size:120%
			}
		}

		p + p{
			margin-top:16px;
		}
		p + *{
			margin-top:24px;
		}
		h1+ *, h2+ *, h3+ *, h4+ *, h5+ *, h6+ *{
			margin-top:1rem;
		}
		* + h1, * + h2, * + h3, * + h4, * + h5, * + h6{
			margin-top:2em;
		}


		h1, h2, h3, h4, h5, h6{
			font-weight:700;
			line-height: 1.2;
		}

		h2[id]::before {
			content: '';
			display: block;
			height:      80px;
			margin-top: -80px;
			visibility: hidden;
		}

		h1{font-size:2rem}
		h2{font-size:1.8rem}
		h3{font-size:1.6rem}
		h4{font-size:1.4rem}
		h5{font-size:1.2rem}
		h6{font-size:1rem}

		a{
			text-decoration: underline;
		}

		ul{
			list-style:disc;
			margin-left:1em;
		}
		ul ul {
			font-size: inherit;
		}

		li + li, li ul, li ol {
			margin-top:.5em;
		}

		.do-not-table{
			overflow-x:auto;

			table{
				max-width: 1000px;
			}
			tr{
				display:grid;
				grid-template-columns: 1fr 1fr;
				
			}
			tbody tr{
				border-bottom: 2px solid var(--table-border-color);
			}
			th,td{
				padding:12px 16px;
			}
			th{
				background: #EAEDF7;
				background-color: var(--table-header-bg-color);
				color: var(--table-header-text-color);
			}
			th+th{
				background: #FEE9E6;
				background-color: var(--table-header-danger-bg-color);
				color: var(--table-header-danger-text-color);
			}
		}

		.frame {
			margin-top: 40px;
			padding: 40px;
			background-color: white;
			text-align: center;

			&.spaced{
				padding: 80px;
			}

			@media(max-width:1024px){
				margin-top: 32px;
				padding: 32px 24px;
				width: 100vw;
				max-width: 100vw;
				position: relative;
				left: 50%;
				right: 50%;
				margin-left: -50vw;
				margin-right: -50vw;
					&.spaced{
					padding: 48px;
				}
			}

			img{
				display: inline-block;
			}
		}

		pre {
			padding:24px;
			border-radius: 8px;
		}


		

	}
	.bg-1 {background-color: var(--color-bg-1) !important;}
	.bg-2 {background-color: var(--color-bg-2) !important;}
	.bg-3 {background-color: var(--color-bg-3) !important;}
	.bg-4 {background-color: var(--color-bg-4) !important;}
	.bg-5 {background-color: var(--color-bg-5) !important;}
	.bg-menu{background-color: var(--color-bg-menu);}

	@media(min-width:420px){
		.stack-colours{
			// display:grid;
			// grid-template-columns: 1fr 1fr;
			columns: 2;
		}
	}
</style>